@{
}
@model V._3._0.Models.PersonalInfo;
<head>
    <title>PERSONAL INFORMATION</title>
    <link rel="stylesheet" href="~/css/Patients/PersonalInfo/PersonalInfo.css" />
</head>
<body>
    <h1> PATIENT PERSONAL INFORMATION</h1>
    <h2>@Model.Name @Model.PIId</h2>
    <form method="post" asp-controller="Modules" asp-action="UpdatedPersonalInfo">
        <div>
            <input asp-for="PatId" value="@Model.PatId" type="hidden"/>
            <input asp-for="PIId" value="@Model.PIId" type="hidden" />
            <input asp-for="Name" value="@Model.Name" type="hidden">

            <div class="input">
                <label asp-for="FatherName">Father Name:</label>
                <input asp-for="FatherName" value="@Model.FatherName" type="text" placeholder="Father Name">
            </div>
            <div class="input" class="input">
                <label asp-for="Gender">Gender</label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" id="package-select">
                    <option value="">Select</option>
                </select>
            </div>
            <div class="input">
                <label asp-for="Age">Age:</label>
                <input value="@Model.Age" asp-for="Age" type="number" placeholder="Age">
            </div>
            <div class="input">
                <label asp-for="Address">Address</label>
                <input value="@Model.Address" asp-for="Address" type="text" placeholder="Address of patient">
            </div>
            <div class="input">
                <label asp-for="Email">Email</label>
                <input value="@Model.Email" asp-for="Email" type="email" placeholder="E-mail">
            </div>
            <div class="input">
                <label asp-for="Contact">Contact:</label>
                <input value="@Model.Contact" asp-for="Contact" type="tel" placeholder="021-23899901">
            </div>
            <button type="submit" id="Submit-Button">
                SUBMIT
            </button>
        </div>
    </form>
</body>
